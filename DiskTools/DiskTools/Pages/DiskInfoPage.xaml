<Page
    x:Class="DiskTools.Pages.DiskInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="using:Syncfusion.UI.Xaml.Charts"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:converters="using:DiskTools.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gauge="using:Syncfusion.UI.Xaml.Gauges"
    xmlns:lib="using:DiskInfoLibWinRT"
    xmlns:local="using:DiskTools.Controls"
    xmlns:local1="using:DiskTools"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="PivotItem">
            <Setter Property="Margin" Value="0" />
        </Style>

        <converters:ReadableBytesConverter x:Key="ReadableBytesConverter"/>
        <converters:ReadableTimeConverter x:Key="ReadableTimeConverter"/>
        <converters:ReadableCountConverter x:Key="ReadableCountConverter"/>
        <converters:ReadableRotationConverter x:Key="ReadableRotationConverter"/>
    </Page.Resources>

    <Grid x:Name="Root">
        <TwoPaneView
            x:Name="TwoPaneView"
            MinWideModeWidth="0"
            Pane1Length="250"
            PanePriority="Pane2"
            TallModeConfiguration="SinglePane">

            <TwoPaneView.Pane1>
                <Grid Padding="0,28,0,0" RowSpacing="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <AutoSuggestBox Margin="4,0" QueryIcon="Find" />
                    <ListView
                        x:Name="ListView"
                        Grid.Row="1"
                        SelectedIndex="0">
                        <ListViewItem x:Uid="/DiskInfoPage/Disk_Overview" />
                        <ListViewItem x:Uid="/DiskInfoPage/Disk_Reallocated_Sectors_Count" />
                        <ListViewItem x:Uid="/DiskInfoPage/Disk_Power_On_Hours" />
                        <ListViewItem x:Uid="/DiskInfoPage/Disk_Power_Cycle_Count" />
                        <ListViewItem x:Uid="/DiskInfoPage/Disk_Temperature" />
                        <ListViewItem x:Uid="/DiskInfoPage/Disk_Reallocation_Event_Count" />
                        <ListViewItem x:Uid="/DiskInfoPage/Disk_Current_Pending_Sector_Count" />
                        <ListViewItem x:Uid="/DiskInfoPage/Disk_Uncorrectable_Sector_Count" />
                        <ListViewItem x:Uid="/DiskInfoPage/Disk_Remaining_Life" />
                        <ListViewItem x:Uid="/DiskInfoPage/Disk_Total_Host_Writes" />
                        <ListViewItem x:Uid="/DiskInfoPage/Disk_Total_Host_Reads" />
                        <ListViewItem x:Uid="/DiskInfoPage/Disk_Total_NAND_Writes" />
                        <ListViewItem x:Uid="/DiskInfoPage/Disk_Gigabytes_Erased" />
                        <ListViewItem x:Uid="/DiskInfoPage/Disk_Wear_Leveling_Count" />
                    </ListView>
                </Grid>
            </TwoPaneView.Pane1>

            <TwoPaneView.Pane2>
                <Pivot Margin="0,-30,0,0" SelectedIndex="{Binding SelectedIndex, ElementName=ListView, Mode=TwoWay}">
                    <!--Overview-->
                    <PivotItem>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <ScrollViewer>
                                
                                <!--右侧面板边距-->                                
                                <Grid VerticalAlignment="Top" Margin="62">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                        <Grid>
                                            <!--  统计图  -->
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.DataContext>
                                                <local1:ViewModel />
                                            </Grid.DataContext>

                                            <!--  折线图  -->
                                            <chart:SfCartesianChart Grid.Column="1">

                                                <!--  渐变画笔  -->
                                                <chart:SfCartesianChart.Resources>
                                                    <BrushCollection x:Key="customBrushes">
                                                        <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                                            <GradientStop Offset="2" Color="#90FFffff" />
                                                            <GradientStop Offset="0" Color="#00ffffff" />
                                                        </LinearGradientBrush>
                                                    </BrushCollection>

                                                    <BrushCollection x:Key="customBrushes2">
                                                        <SolidColorBrush Color="#ffffff" />
                                                    </BrushCollection>

                                                </chart:SfCartesianChart.Resources>

                                            <!--图-->
                                            <chart:SfCartesianChart.XAxes>
                                                <chart:DateTimeAxis IntervalType="Auto"/>
                                            </chart:SfCartesianChart.XAxes>

                                                <chart:SfCartesianChart.YAxes>
                                                    <chart:NumericalAxis />
                                                </chart:SfCartesianChart.YAxes>

                                                <chart:SfCartesianChart.Series>

                                                    <!--  折线  -->
                                                    <chart:LineSeries
                                                        ItemsSource="{Binding Collection}"
                                                        PaletteBrushes="{StaticResource customBrushes2}"
                                                        XBindingPath="XValue"
                                                        YBindingPath="YValue" />

                                                    <!--  面积  -->
                                                    <chart:AreaSeries
                                                        ItemsSource="{Binding Collection}"
                                                        PaletteBrushes="{StaticResource customBrushes}"
                                                        XBindingPath="XValue"
                                                        YBindingPath="YValue" />
                                                </chart:SfCartesianChart.Series>

                                            </chart:SfCartesianChart>



                                            <!--  圆环  -->
                                            <gauge:SfRadialGauge Grid.Column="0" Width="270">
                                                <gauge:SfRadialGauge.Axes>
                                                    <gauge:RadialAxis AxisLineWidth="0.15" AxisLineWidthUnit="Factor">
                                                        <gauge:RadialAxis.Pointers>
                                                            <gauge:RangePointer
                                                                AnimationDuration="1000"
                                                                EnableAnimation="True"
                                                                PointerWidth="200"
                                                                WidthUnit="Pixel"
                                                                Value="80">
                                                                <gauge:RangePointer.AnimationEasingFunction>
                                                                    <ElasticEase Oscillations="1" />
                                                                </gauge:RangePointer.AnimationEasingFunction>
                                                                <gauge:RangePointer.Background>
                                                                    <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.65" RadiusX="0.6" RadiusY="0.7">
                                                                        <RadialGradientBrush.GradientStops>
                                                                            <GradientStop Offset="0.45" Color="#00FF0000" />
                                                                            <GradientStop Offset="0.65" Color="#10FF0000" />
                                                                            <GradientStop Offset="1" Color="#ffFF0000" />
                                                                        </RadialGradientBrush.GradientStops>
                                                                    </RadialGradientBrush>
                                                                </gauge:RangePointer.Background>
                                                            </gauge:RangePointer>

                                                        </gauge:RadialAxis.Pointers>
                                                    </gauge:RadialAxis>
                                                </gauge:SfRadialGauge.Axes>
                                            </gauge:SfRadialGauge>
                                            <gauge:SfRadialGauge Width="270">
                                                <gauge:SfRadialGauge.Axes>
                                                    <gauge:RadialAxis AxisLineWidth="0.15" AxisLineWidthUnit="Factor">
                                                        <gauge:RadialAxis.Pointers>
                                                            <gauge:RangePointer
                                                                AnimationDuration="1000"
                                                                EnableAnimation="True"
                                                                PointerWidth="0.15"
                                                                WidthUnit="Factor"
                                                                Value="80">
                                                                <gauge:RangePointer.AnimationEasingFunction>
                                                                    <ElasticEase Oscillations="1" />
                                                                </gauge:RangePointer.AnimationEasingFunction>
                                                                <gauge:RangePointer.GradientStops>
                                                                    <gauge:GaugeGradientStop Color="Red" Value="-50" />
                                                                    <gauge:GaugeGradientStop Color="Red" Value="-30" />
                                                                    <gauge:GaugeGradientStop Color="White" Value="120" />
                                                                </gauge:RangePointer.GradientStops>
                                                            </gauge:RangePointer>
                                                            <gauge:ContentPointer
                                                                AnimationDuration="1000"
                                                                EnableAnimation="True"
                                                                Value="80">
                                                                <gauge:ContentPointer.AnimationEasingFunction>
                                                                    <ElasticEase Oscillations="1" />
                                                                </gauge:ContentPointer.AnimationEasingFunction>
                                                                <gauge:ContentPointer.Content>
                                                                    <Grid Width="60">
                                                                        <Rectangle Width="30" HorizontalAlignment="Left">
                                                                            <Rectangle.Fill>
                                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                                    <GradientStop x:Name="GradientStop7" Offset="1" Color="#ffffffff" />
                                                                                    <GradientStop x:Name="GradientStop8" Offset="0" Color="#10ffffff" />
                                                                                </LinearGradientBrush>
                                                                            </Rectangle.Fill>
                                                                        </Rectangle>
                                                                        <TextBlock Margin="2" Text="          " />
                                                                    </Grid>
                                                                </gauge:ContentPointer.Content>
                                                            </gauge:ContentPointer>
                                                        </gauge:RadialAxis.Pointers>
                                                    </gauge:RadialAxis>
                                                </gauge:SfRadialGauge.Axes>
                                            </gauge:SfRadialGauge>
                                        </Grid>

                                        <Grid Grid.Row="1">
                                            <!--  带图标的数据列  -->
                                            <controls:AdaptiveGridView
                                                Name="AdaptiveGridViewContro2"
                                                DesiredWidth="400"
                                                IsItemClickEnabled="True"
                                                OneRowModeEnabled="False"
                                                SelectionMode="Single"
                                                StretchContentForSingleRow="False">

                                                <!--  items  -->
                                                <local:GeneralDiskInfoItem Margin="-2" FontSize="14">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto" />
                                                            <ColumnDefinition Width="2.5*" />
                                                            <ColumnDefinition Width="4*" />
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Grid.Column="0">
                                                            <FontIcon
                                                                Margin="4.5"
                                                                FontFamily="Segoe Fluent Icons"
                                                                FontSize="16"
                                                                Glyph="&#xEEA1;" />
                                                            <FontIcon
                                                                Margin="4.5"
                                                                FontFamily="Segoe Fluent Icons"
                                                                FontSize="16"
                                                                Glyph="&#xEE6F;" />
                                                            <FontIcon
                                                                Margin="4.5"
                                                                FontFamily="Segoe Fluent Icons"
                                                                FontSize="16"
                                                                Glyph="&#xF404;" />
                                                        </StackPanel>
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock
                                                                Margin="3"
                                                                FontWeight="SemiBold"
                                                                Text="固件" />
                                                            <TextBlock
                                                                Margin="3"
                                                                FontWeight="SemiBold"
                                                                Text="序列号" />
                                                            <TextBlock
                                                                Margin="3"
                                                                FontWeight="SemiBold"
                                                                Text="接口" />
                                                        </StackPanel>
                                                        <StackPanel Grid.Column="2">
                                                            <TextBlock Margin="3" Text="{x:Bind Info.Firmware}" />
                                                            <TextBlock Margin="3" Text="{x:Bind Info.SerialNumber}" />
                                                            <TextBlock Margin="3" Text="{x:Bind Info.Interface}" />
                                                        </StackPanel>
                                                    </Grid>
                                                </local:GeneralDiskInfoItem>

                                                <local:GeneralDiskInfoItem Margin="-2" FontSize="14">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto" />
                                                            <ColumnDefinition Width="2.5*" />
                                                            <ColumnDefinition Width="4*" />
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Grid.Column="0">
                                                            <FontIcon
                                                                Margin="4.5"
                                                                FontFamily="Segoe Fluent Icons"
                                                                FontSize="16"
                                                                Glyph="&#xE8CB;" />
                                                            <FontIcon
                                                                Margin="4.5"
                                                                FontFamily="Segoe Fluent Icons"
                                                                FontSize="16"
                                                                Glyph="&#xEDA2;" />
                                                            <FontIcon
                                                                Margin="4.5"
                                                                FontFamily="Segoe Fluent Icons"
                                                                FontSize="16"
                                                                Glyph="&#xEEA1;" />
                                                        </StackPanel>
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock
                                                                Margin="3"
                                                                FontWeight="SemiBold"
                                                                Text="传输模式" />
                                                            <TextBlock
                                                                Margin="3"
                                                                FontWeight="SemiBold"
                                                                Text="驱动器号" />
                                                            <TextBlock
                                                                Margin="3"
                                                                FontWeight="SemiBold"
                                                                Text="主机总计读取" />
                                                        </StackPanel>
                                                        <StackPanel Grid.Column="2">
                                                            <TextBlock Margin="3" Text="{x:Bind Info.CurrentTransferMode}" />
                                                            <TextBlock Margin="3" Text="{x:Bind Info.DriveMap}" />
                                                            <TextBlock Margin="3" Text="{x:Bind Info.HostReads, Converter={StaticResource ReadableBytesConverter}}" />
                                                        </StackPanel>
                                                    </Grid>
                                                </local:GeneralDiskInfoItem>

                                            <local:GeneralDiskInfoItem Margin="-2" FontSize="14">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto"/>
                                                        <ColumnDefinition Width="2.5*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <FontIcon FontFamily="Segoe Fluent Icons"  Glyph="&#xE104;"  Margin="4.5" FontSize="16" />
                                                        <FontIcon FontFamily="Segoe Fluent Icons"  Glyph="&#xE14A;"  Margin="4.5" FontSize="16" />
                                                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE945;"  Margin="4.5" FontSize="16" />
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="主机总计写入" FontWeight="SemiBold" Margin="3"/>
                                                        <TextBlock Text="转速" FontWeight="SemiBold" Margin="3"/>
                                                        <TextBlock Text="通电次数" FontWeight="SemiBold" Margin="3"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="2">
                                                        <TextBlock Margin="3" Text="{x:Bind Info.HostWrites,Converter={StaticResource ReadableBytesConverter}}"/>
                                                        <TextBlock Margin="3" Text="{x:Bind Info.Rotation, Converter={StaticResource ReadableRotationConverter}}"/>
                                                        <TextBlock Margin="3" Text="{x:Bind Info.PowerOnCount, Converter={StaticResource ReadableCountConverter}}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </local:GeneralDiskInfoItem>

                                                <local:GeneralDiskInfoItem Margin="-2" FontSize="14">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto" />
                                                            <ColumnDefinition Width="2.5*" />
                                                            <ColumnDefinition Width="4*" />
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Grid.Column="0">
                                                            <FontIcon
                                                                Margin="4.5"
                                                                FontFamily="Segoe Fluent Icons"
                                                                FontSize="16"
                                                                Glyph="&#xE121;" />
                                                        </StackPanel>
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock
                                                                Margin="3"
                                                                FontWeight="SemiBold"
                                                                Text="通电时间" />
                                                        </StackPanel>
                                                        <StackPanel Grid.Column="2">
                                                            <TextBlock Margin="3" Text="{x:Bind Info.PowerOnTime, Converter={StaticResource ReadableTimeConverter}}" />
                                                        </StackPanel>
                                                    </Grid>
                                                </local:GeneralDiskInfoItem>

                                                <local:GeneralDiskInfoItem Margin="-2" FontSize="14">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto" />
                                                            <ColumnDefinition Width="2.5*" />
                                                            <ColumnDefinition Width="4*" />
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Grid.Column="0">
                                                            <FontIcon
                                                                Margin="4.5"
                                                                FontFamily="Segoe Fluent Icons"
                                                                FontSize="16"
                                                                Glyph="&#xE74C;" />
                                                            <FontIcon
                                                                Margin="4.5"
                                                                FontFamily="Segoe Fluent Icons"
                                                                FontSize="16"
                                                                Glyph="&#xEEA1;" />
                                                        </StackPanel>
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock
                                                                Margin="3"
                                                                FontWeight="SemiBold"
                                                                Text="支持的功能" />
                                                            <TextBlock
                                                                Margin="3"
                                                                FontWeight="SemiBold"
                                                                Text="标准" />
                                                        </StackPanel>
                                                        <StackPanel Grid.Column="2">
                                                            <TextBlock Margin="3" Text="{x:Bind Info.Features}" />
                                                            <TextBlock Margin="3" Text="{x:Bind Info.Standard}" />
                                                        </StackPanel>
                                                    </Grid>
                                                </local:GeneralDiskInfoItem>

                                            </controls:AdaptiveGridView>

                                        </Grid>

                                        <!--  数据列  -->

                                        <Grid Grid.Row="2">
                                            <Rectangle
                                                Grid.ColumnSpan="3"
                                                Width="Auto"
                                                Height="Auto">
                                                <Rectangle.Fill>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop x:Name="GradientStop9" Offset="1" Color="#10ffffff" />
                                                        <GradientStop x:Name="GradientStop10" Offset="0" Color="#50ffffff" />
                                                    </LinearGradientBrush>
                                                </Rectangle.Fill>
                                            </Rectangle>
                                            <ItemsRepeater ItemsSource="{x:Bind Info.Attributes}">
                                                <ItemsRepeater.ItemTemplate>
                                                    <DataTemplate x:DataType="lib:SmartAttribute">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="1*" />
                                                                <ColumnDefinition Width="5*" />
                                                                <ColumnDefinition Width="3*" />
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Grid.Column="0" Text="{x:Bind Id}" />
                                                            <TextBlock Grid.Column="1" Text="{x:Bind Name}" />
                                                            <TextBlock Grid.Column="2" Text="{x:Bind RawValue}" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsRepeater.ItemTemplate>
                                            </ItemsRepeater>
                                        </Grid>
                                    </Grid>

                                </ScrollViewer>

                                <!--  命令栏  -->
                                <CommandBar
                                    Grid.Row="1"
                                    VerticalAlignment="Bottom"
                                    Background="Transparent"
                                    DefaultLabelPosition="Right"
                                    IsOpen="False">

                                    <!--  保存（导出）  -->
                                    <AppBarButton Icon="Save" Label="Save">
                                        <AppBarButton.Flyout>
                                            <MenuFlyout Placement="RightEdgeAlignedTop">
                                                <MenuFlyoutItem Text="Save as image" />
                                                <MenuFlyoutItem Text="Save as text" />
                                            </MenuFlyout>
                                        </AppBarButton.Flyout>
                                    </AppBarButton>

                                <!--复制-->
                                <AppBarElementContainer>
                                    <SplitButton ToolTipService.ToolTip="Alignment" Click="SplitButton_Click">

                                        <SplitButton.Content>
                                            <Viewbox Width="16" Height="16" Margin="0,2,0,0">
                                                <SymbolIcon Symbol="Copy"/>
                                            </Viewbox>
                                        </SplitButton.Content>
                                        <SplitButton.Flyout>
                                            <MenuFlyout>
                                                <ToggleMenuFlyoutItem  Text="解析ASCII内容" IsChecked="{x:Bind ViewModel.AsciiView, Mode=TwoWay}"/>
                                                <MenuFlyoutSeparator/>
                                                <ToggleMenuFlyoutItem Text="IDENTIFY DEVICE" IsChecked="{x:Bind ViewModel.DumpIdentifyDevice, Mode=TwoWay}"/>
                                                <ToggleMenuFlyoutItem Text="SMART_READ_THRESHOLD" IsChecked="{x:Bind ViewModel.DumpSmartReadThreshold, Mode=TwoWay}"/>
                                                <ToggleMenuFlyoutItem  Text="SMART_READ DATA" IsChecked="{x:Bind ViewModel.DumpSmartReadData, Mode=TwoWay}"/>
                                            </MenuFlyout>
                                        </SplitButton.Flyout>
                                    </SplitButton>
                                </AppBarElementContainer>

                                    <!--  刷新  -->
                                    <AppBarButton
                                        Click="AppBarButton_Click"
                                        Icon="Refresh"
                                        Label="Refresh" />

                                </CommandBar>
                            </Grid>

                    </PivotItem>
                    
                    <!--Reallocated sectors count -->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind ViewModel.Collection}"/>
                    </PivotItem>
                    
                    <!--power on hours-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind ViewModel.Collection}"/>
                    </PivotItem>
                    
                    <!--power cycle count-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind ViewModel.Collection}"/>
                    </PivotItem>
                    
                    <!--Temperature-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind ViewModel.Collection}"/>
                    </PivotItem>
                    
                    <!--reallocation event count-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind ViewModel.Collection}"/>
                    </PivotItem>
                    
                    <!--current pending sector count-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind ViewModel.Collection}"/>
                    </PivotItem>
                    
                    <!--uncorrectable sector count-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind ViewModel.Collection}"/>
                    </PivotItem>
                    
                    <!--remaining life-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind ViewModel.Collection}"/>
                    </PivotItem>
                    
                    <!--total host writes-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind ViewModel.Collection}"/>
                    </PivotItem>
                    
                    <!--Total host reads-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind ViewModel.Collection}"/>
                    </PivotItem>
                    
                    <!--Total NAnd writes-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind ViewModel.Collection}"/>
                    </PivotItem>
                    
                    <!--Gigabytes erased-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind ViewModel.Collection}"/>
                    </PivotItem>
                    
                    <!--Wear leveling count-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind ViewModel.Collection}"/>
                    </PivotItem>
                </Pivot>
            </TwoPaneView.Pane2>
        </TwoPaneView>


        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="LayoutVisualStates">
                <VisualState x:Name="LargeLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1372" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--<Setter Target="Root.Padding" Value="76,0,32,36" />-->
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="WideLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource Breakpoint640Plus}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--<Setter Target="Root.Padding" Value="52,0,32,36" />-->
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="NarrowLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--<Setter Target="Root.Padding" Value="50 30 -30 -60" />-->
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>
