<Page
    x:Class="DiskTools.Pages.DiskInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="using:Syncfusion.UI.Xaml.Charts"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gauge="using:Syncfusion.UI.Xaml.Gauges"
    xmlns:lib="using:DiskInfoLibWinRT"
    xmlns:local="using:DiskTools.Controls"
    xmlns:local1="using:DiskTools"
    xmlns:page="using:DiskTools.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="PivotItem">
            <Setter Property="Margin" Value="0" />
        </Style>
    </Page.Resources>

    <TwoPaneView
        x:Name="TwoPaneView"
        MinWideModeWidth="0"
        Pane1Length="250"
        PanePriority="Pane2"
        TallModeConfiguration="SinglePane">

        <TwoPaneView.Pane1>
            <Grid Padding="0,28,0,0" RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <AutoSuggestBox Margin="4,0" QueryIcon="Find" />
                <ListView
                    x:Name="ListView"
                    Grid.Row="1"
                    SelectedIndex="0">
                    <ListViewItem x:Uid="/DiskInfoPage/Disk_Overview" />
                    <ListViewItem x:Uid="/DiskInfoPage/Disk_Reallocated_Sectors_Count" />
                    <ListViewItem x:Uid="/DiskInfoPage/Disk_Power_On_Hours" />
                    <ListViewItem x:Uid="/DiskInfoPage/Disk_Power_Cycle_Count" />
                    <ListViewItem x:Uid="/DiskInfoPage/Disk_Temperature" />
                    <ListViewItem x:Uid="/DiskInfoPage/Disk_Reallocation_Event_Count" />
                    <ListViewItem x:Uid="/DiskInfoPage/Disk_Current_Pending_Sector_Count" />
                    <ListViewItem x:Uid="/DiskInfoPage/Disk_Uncorrectable_Sector_Count" />
                    <ListViewItem x:Uid="/DiskInfoPage/Disk_Remaining_Life" />
                    <ListViewItem x:Uid="/DiskInfoPage/Disk_Total_Host_Writes" />
                    <ListViewItem x:Uid="/DiskInfoPage/Disk_Total_Host_Reads" />
                    <ListViewItem x:Uid="/DiskInfoPage/Disk_Total_NAND_Writes" />
                    <ListViewItem x:Uid="/DiskInfoPage/Disk_Gigabytes_Erased" />
                    <ListViewItem x:Uid="/DiskInfoPage/Disk_Wear_Leveling_Count" />
                </ListView>
            </Grid>
        </TwoPaneView.Pane1>

        <TwoPaneView.Pane2>
            <Grid VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="{x:Bind Info.Model}" FontSize="28px" FontWeight="Bold" Margin="54,49,0,0"/>
                <Pivot Grid.Row="1" Margin="0,-30,0,0" SelectedIndex="{x:Bind ListView.SelectedIndex, Mode=TwoWay}">
                    <!--Overview-->
                    <PivotItem VerticalContentAlignment="Stretch">
                        <page:DiskOverview x:Name="OverviewPage"/>
                    </PivotItem>

                    <!--Reallocated sectors count -->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind Info.ReallocatedSectorsData}"/>
                    </PivotItem>

                    <!--power on hours-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind Info.PowerOnHoursData}"/>
                    </PivotItem>

                    <!--power cycle count-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind Info.PowerCycleData}"/>
                    </PivotItem>

                    <!--Temperature-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind Info.TemperatureData}"/>
                    </PivotItem>

                    <!--reallocation event count-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind Info.ReallocationEventData}"/>
                    </PivotItem>

                    <!--current pending sector count-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind Info.PendingSectorData}"/>
                    </PivotItem>

                    <!--uncorrectable sector count-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind Info.UncorrectableSectorData}"/>
                    </PivotItem>

                    <!--remaining life-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind Info.RemainingLifeData}"/>
                    </PivotItem>

                    <!--total host writes-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind Info.TotalHostWritesData}"/>
                    </PivotItem>

                    <!--Total host reads-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind Info.TotalHostReadsData}"/>
                    </PivotItem>

                    <!--Total NAnd writes-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind Info.TotalNandWritesData}"/>
                    </PivotItem>

                    <!--Gigabytes erased-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind Info.GigabytesErasedData}"/>
                    </PivotItem>

                    <!--Wear leveling count-->
                    <PivotItem>
                        <local:GraphPage Collection="{x:Bind Info.WearLevelingCountData}"/>
                    </PivotItem>
                </Pivot>
            </Grid>
        </TwoPaneView.Pane2>
    </TwoPaneView>
</Page>