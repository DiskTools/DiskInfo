                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto" />
                                                            <ColumnDefinition Width="2.5*" />
                                                            <ColumnDefinition Width="4*" />
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Grid.Column="0">
                                                            <FontIcon
                                                                Margin="4.5"
                                                                FontFamily="Segoe Fluent Icons"
                                                                FontSize="16"
                                                                Glyph="&#xE74C;" />
                                                            <FontIcon
                                                                Margin="4.5"
                                                                FontFamily="Segoe Fluent Icons"
                                                                FontSize="16"
                                                                Glyph="&#xEEA1;" />
                                                        </StackPanel>
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock
                                                                Margin="3"
                                                                FontWeight="SemiBold"
                                                                Text="支持的功能" />
                                                            <TextBlock
                                                                Margin="3"
                                                                FontWeight="SemiBold"
                                                                Text="标准" />
                                                        </StackPanel>
                                                        <StackPanel Grid.Column="2">
                                                            <TextBlock Margin="3" Text="{x:Bind Info.Features}" />
                                                            <TextBlock Margin="3" Text="{x:Bind Info.Standard}" />
                                                        </StackPanel>
                                                    </Grid>
                                                </local:GeneralDiskInfoItem>

                                            </controls:AdaptiveGridView>

                                        </Grid>

                                        <!--  数据列  -->

                                        <Grid Grid.Row="2">
                                            <Rectangle
                                                Grid.ColumnSpan="3"
                                                Width="Auto"
                                                Height="Auto">
                                                <Rectangle.Fill>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop x:Name="GradientStop9" Offset="1" Color="#10ffffff" />
                                                        <GradientStop x:Name="GradientStop10" Offset="0" Color="#50ffffff" />
                                                    </LinearGradientBrush>
                                                </Rectangle.Fill>
                                            </Rectangle>
                                            <ItemsRepeater ItemsSource="{x:Bind Info.Attributes}">
                                                <ItemsRepeater.ItemTemplate>
                                                    <DataTemplate x:DataType="lib:SmartAttribute">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="1*" />
                                                                <ColumnDefinition Width="5*" />
                                                                <ColumnDefinition Width="3*" />
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Grid.Column="0" Text="{x:Bind Id}" />
                                                            <TextBlock Grid.Column="1" Text="{x:Bind Name}" />
                                                            <TextBlock Grid.Column="2" Text="{x:Bind RawValue}" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsRepeater.ItemTemplate>
                                            </ItemsRepeater>
                                        </Grid>
                                    </Grid>

                                </ScrollViewer>

                                <!--  命令栏  -->
                                <CommandBar
                                    Grid.Row="1"
                                    VerticalAlignment="Bottom"
                                    Background="Transparent"
                                    DefaultLabelPosition="Right"
                                    IsOpen="False">

                                    <!--  保存（导出）  -->
                                    <AppBarButton Icon="Save" Label="Save">
                                        <AppBarButton.Flyout>
                                            <MenuFlyout Placement="RightEdgeAlignedTop">
                                                <MenuFlyoutItem Text="Save as image" />
                                                <MenuFlyoutItem Text="Save as text" />
                                            </MenuFlyout>
                                        </AppBarButton.Flyout>
                                    </AppBarButton>

                                    <!--  复制  -->
                                    <AppBarElementContainer>
                                        <SplitButton ToolTipService.ToolTip="Alignment">

                                            <SplitButton.Content>
                                                <Viewbox
                                                    Width="16"
                                                    Height="16"
                                                    Margin="0,2,0,0">
                                                    <SymbolIcon Symbol="Copy" />
                                                </Viewbox>
                                            </SplitButton.Content>
                                            <SplitButton.Flyout>
                                                <MenuFlyout>
                                                    <MenuFlyoutItem Text="解析ASCII内容" />
                                                    <MenuFlyoutSeparator />
                                                    <MenuFlyoutItem Text="IDENTIFY DEVICE" />
                                                    <MenuFlyoutItem Text="SMART_READ_THRESHOLD" />
                                                    <MenuFlyoutItem Text="SMART_READ DATA" />
                                                </MenuFlyout>
                                            </SplitButton.Flyout>
