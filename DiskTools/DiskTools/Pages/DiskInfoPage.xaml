                                                                Glyph="&#xE104;" />
                                                            <FontIcon
                                                                Margin="4.5"
                                                                FontFamily="Segoe Fluent Icons"
                                                                FontSize="16"
                                                                Glyph="&#xE14A;" />
                                                            <FontIcon
                                                                Margin="4.5"
                                                                FontFamily="Segoe Fluent Icons"
                                                                FontSize="16"
                                                                Glyph="&#xE945;" />
                                                        </StackPanel>
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock
                                                                Margin="3"
                                                                FontWeight="SemiBold"
                                                                Text="主机总计写入" />
                                                            <TextBlock
                                                                Margin="3"
                                                                FontWeight="SemiBold"
                                                                Text="转速" />
                                                            <TextBlock
                                                                Margin="3"
                                                                FontWeight="SemiBold"
                                                                Text="通电次数" />
                                                        </StackPanel>
                                                        <StackPanel Grid.Column="2">
                                                            <TextBlock Margin="3" Text="{x:Bind Info.HostWrites, Converter={StaticResource ReadableBytesConverter}}" />
                                                            <TextBlock Margin="3" Text="{x:Bind Info.Rotation}" />
                                                            <TextBlock Margin="3" Text="{x:Bind Info.PowerOnCount, Converter={StaticResource ReadableCountConverter}}" />
                                                        </StackPanel>
                                                    </Grid>
                                                </local:GeneralDiskInfoItem>

                                                <local:GeneralDiskInfoItem Margin="-2" FontSize="14">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto" />
                                                            <ColumnDefinition Width="2.5*" />
                                                            <ColumnDefinition Width="4*" />
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Grid.Column="0">
                                                            <FontIcon
                                                                Margin="4.5"
                                                                FontFamily="Segoe Fluent Icons"
                                                                FontSize="16"
                                                                Glyph="&#xE121;" />
                                                        </StackPanel>
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock
                                                                Margin="3"
