<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:DiskTools.Controls" xmlns:converters="using:DiskTools.Converters">
    <!--定位参数勿动！！颜色可以改-->
    <converters:PointerBrushCenterConverter x:Key="PointerBrushCenterConverter" />
    <SolidColorBrush x:Key="OuterTickBrush" Color="#40FFFFFF" />
    <RadialGradientBrush x:Key="InnerRangeBrush1" Center="112,34" 
                         MappingMode="Absolute" GradientOrigin="{Binding Center, RelativeSource={RelativeSource Self}}" RadiusX="113" RadiusY="113">
        <GradientStop Offset="0" Color="Transparent" />
        <GradientStop Offset="0.75" Color="#00FFFFFF" />
        <GradientStop Offset="0.75" Color="#20FFFFFF" />
        <GradientStop Offset="1" Color="#40FFFFFF" />
    </RadialGradientBrush>

    <RadialGradientBrush x:Key="InnerRangeBrush2" Center="104,112" 
                         MappingMode="Absolute" GradientOrigin="{Binding Center, RelativeSource={RelativeSource Self}}" 
                         RadiusX="113" RadiusY="113">
        <GradientStop Offset="0" Color="Transparent" />
        <GradientStop Offset="0.75" Color="#00FFFFFF" />
        <GradientStop Offset="0.75" Color="#20FFFFFF" />
        <GradientStop Offset="1" Color="#40FFFFFF" />
    </RadialGradientBrush>

    <RadialGradientBrush x:Key="InnerRangeBrush3" Center="0,112" 
                         MappingMode="Absolute" GradientOrigin="{Binding Center, RelativeSource={RelativeSource Self}}" 
                         RadiusX="113" RadiusY="113">
        <GradientStop Offset="0" Color="Transparent" />
        <GradientStop Offset="0.75" Color="#00FFFFFF" />
        <GradientStop Offset="0.75" Color="#20FFFFFF" />
        <GradientStop Offset="1" Color="#40FFFFFF" />
    </RadialGradientBrush>

    <RadialGradientBrush x:Key="InnerRangeBrush4" Center="0,34" 
                         MappingMode="Absolute" GradientOrigin="{Binding Center, RelativeSource={RelativeSource Self}}" 
                         RadiusX="113" RadiusY="113">
        <GradientStop Offset="0" Color="Transparent" />
        <GradientStop Offset="0.75" Color="#00FFFFFF" />
        <GradientStop Offset="0.75" Color="#20FFFFFF" />
        <GradientStop Offset="1" Color="#40FFFFFF" />
    </RadialGradientBrush>

    <RadialGradientBrush x:Key="RedPointerBrush" Center="{Binding Value, Mode=OneWay, Converter={StaticResource PointerBrushCenterConverter}}" MappingMode="Absolute" GradientOrigin="{Binding Center, RelativeSource={RelativeSource Self}}" RadiusX="86" RadiusY="86">
        <GradientStop Offset="0" Color="Transparent" />
        <GradientStop Offset="0.3" Color="Transparent" />
        <GradientStop Offset="0.6" Color="#10BB2222" />
        <GradientStop Offset="0.85" Color="#50BB2222" />
        <GradientStop Offset="0.90" Color="#70BB2222" />
        <GradientStop Offset="0.95" Color="#80BB2222" />
    </RadialGradientBrush>
</ResourceDictionary>
